#! /usr/bin/env bash

function _usage {
    echo "USAGE: $(basename $0) <personal|pivotal>"
}

if [[ $1 == "pivotal" ]] ; then
    profile_dir="Profile 2"
    url="https://mail.pivotallabs.com/"
elif [[ $1 == "personal" ]] ; then
    profile_dir="Default"
    url="https://gmail.com/"
else
    _usage
    exit 0
fi

google-chrome --profile-directory="${profile_dir}" --app="${url}"
