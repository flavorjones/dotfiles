#!/usr/bin/env ruby

def run cmd
  puts cmd
  system(cmd) || raise("command failed: #{cmd}")
end

if ARGV[0] == 'benchmark'
  run "git config user.name 'Mike Dalessio'"
  run "git config user.email 'mike.dalessio@benchmarksolutions.com'"
elsif ARGV[0] == 'pivotal'
  run "git config user.name 'Mike Dalessio'"
  run "git config user.email 'mdalessio@pivotal.io'"
else
  run "git config user.name 'Mike Dalessio'"
  run "git config user.email 'mike@csa.net'"
end
