#! /usr/bin/env bash

ROFI_FINDER="rofi-file"

# the "paper-float" theme is nice, and I want to use it, but it's too
# slow (283ms vs 167ms) because of the transparency (run with
# G_MESSAGES_DEBUG=Timings)

rofi \
  -theme "solarized" \
  -theme-str "#window { border: 2; } #button { text-color: rgba ( 129, 147, 150, 50 % ); }" \
  -font "JetBrains Mono 14" \
  -show-icons \
  -sidebar-mode \
\
  -monitor primary \
  -dpi 1 \
  -pid /tmp/${LOGNAME}-rofi.pid \
\
  -show drun \
  -modi drun,run,file:${ROFI_FINDER},window,keys \
  -drun-show-actions \
  -display-drun "Launch" \
  -display-window "Window" \
  -display-run "Run" \
  -display-keys "Keys" \
\
  -terminal gnome-terminal \
\
  -sort -cache-dir $HOME/.config/rofi \
\
  -kb-remove-word-back "Alt+BackSpace" \
  -kb-row-tab "" -kb-mode-next "Tab" \
