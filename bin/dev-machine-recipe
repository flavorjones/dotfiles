#     sudo add-apt-repository ppa:fingerprint/fingerprint-gui
#     ${update}
#     ${install} libbsapi policykit-1-fingerprint-gui fingerprint-gui
# fi

# rvm
if [[ `which rvm` == "" ]] ; then
    bash < <(curl -s https://raw.github.com/wayneeseguin/rvm/master/binscripts/rvm-installer)
fi

#
#  drwright - as of 2011-11-14 not available as a .deb, but download and build by hand from:
#     http://ftp.gnome.org/pub/GNOME/sources/drwright/
#  note: need 3.0 for oneiric
#
echo "install DRWRIGHT!"
