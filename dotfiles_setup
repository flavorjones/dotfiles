#! /bin/bash

cd $HOME

rm -f .bashrc
ln -s dotfiles/.bashrc .

rm -f bin/clup
ln -s ../dotfiles/clup bin

rm -f .emacs
ln -s dotfiles/.emacs .

rm -f .exrc
ln -s dotfiles/.exrc .

rm -f .mwmrc
ln -s dotfiles/.mwmrc .

rm -f .twmrc
ln -s dotfiles/.twmrc .

rm -f .Xdefaults
ln -s dotfiles/.Xdefaults .

rm -f .xmodmap4win
ln -s dotfiles/.xmodmap4win .

rm -f .inputrc
ln -s dotfiles/.inputrc .

rm -f .sawfishrc
ln -s dotfiles/.sawfishrc

if [[ -d .sawfish ]] ; then
    rm -f .sawfish/custom
else
    mkdir .sawfish
fi
ln -s dotfiles/sawfish_custom sawfish/custom
