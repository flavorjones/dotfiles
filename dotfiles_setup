#! /bin/bash

DOTDIR=${HOME}/.dotfiles
BINDIR=${HOME}/bin
SVNDIR=${HOME}/.subversion
VNCDIR=${HOME}/.vnc
MUSICDIR=${HOME}/Music
GDBDIR=${HOME}/.gdb

if ! test -d $BINDIR ; then
    mkdir $BINDIR
fi
if ! test -d ${HOME}/tmp ; then
    mkdir ${HOME}/tmp
fi
if ! test -d $VNCDIR ; then
    mkdir $VNCDIR
fi
if ! test -d $MUSICDIR ; then
    mkdir $MUSICDIR
fi
if ! test -d $GDBDIR ; then
    mkdir $GDBDIR
fi
touch $HOME/.Xdefaults_local

cd $HOME

rm -f ${HOME}/.bashrc
ln ${DOTDIR}/.bashrc ${HOME}

rm -f ${BINDIR}/clup
ln ${DOTDIR}/clup ${BINDIR}

rm -f ${HOME}/.autotest
ln ${DOTDIR}/.autotest ${HOME}

rm -f ${HOME}/.exrc
ln ${DOTDIR}/.exrc ${HOME}

rm -f ${HOME}/.mwmrc
ln ${DOTDIR}/.mwmrc ${HOME}

rm -f ${HOME}/.twmrc
ln ${DOTDIR}/.twmrc ${HOME}

rm -f ${HOME}/.Xdefaults
rm -f ${HOME}/.Xresources
ln ${DOTDIR}/.Xdefaults ${HOME}/.Xdefaults
ln ${DOTDIR}/.Xdefaults ${HOME}/.Xresources

# removed because i never use it anymore
#rm -f ${HOME}/.xmodmap4win
#ln ${DOTDIR}/.xmodmap4win ${HOME}

rm -f ${HOME}/.inputrc
ln ${DOTDIR}/.inputrc ${HOME}

rm -f ${HOME}/.sawfishrc
ln ${DOTDIR}/.sawfishrc ${HOME}

rm -f ${HOME}/.gdbinit
ln ${DOTDIR}/.gdbinit ${HOME}

rm -f ${GDBDIR}/session-hack
ln ${DOTDIR}/session-hack ${GDBDIR}

rm -f ${GDBDIR}/session-ruby
ln ${DOTDIR}/session-ruby ${GDBDIR}

rm -f ${GDBDIR}/session-asm
ln ${DOTDIR}/session-asm ${GDBDIR}

rm -f ${HOME}/.gitconfig
ln ${DOTDIR}/.gitconfig ${HOME}

rm -f ${HOME}/.gitignore
ln ${DOTDIR}/.gitignore ${HOME}

rm -f ${SVNDIR}/config
ln ${DOTDIR}/config ${SVNDIR}

rm -f ${VNCDIR}/xstartup
ln ${DOTDIR}/xstartup ${VNCDIR}

rm -f ${BINDIR}/sshconf
ln ${DOTDIR}/sshconf ${BINDIR}

rm -f ${BINDIR}/rsync_portable
ln ${DOTDIR}/rsync_portable ${BINDIR}

rm -f ${MUSICDIR}/normalize_volume.sh
ln ${DOTDIR}/normalize_volume.sh ${MUSICDIR}

rm -f ${BINDIR}/wvdialer
ln ${DOTDIR}/wvdialer ${BINDIR}

rm -f ${BINDIR}/m2h
ln ${DOTDIR}/m2h ${BINDIR}

rm -f ${BINDIR}/open_mailto
ln ${DOTDIR}/open_mailto ${BINDIR}
