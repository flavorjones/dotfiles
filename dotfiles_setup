#! /bin/bash

DOTDIR=${HOME}/.dotfiles
BINDIR=${HOME}/bin
SVNDIR=${HOME}/.subversion
VNCDIR=${HOME}/.vnc

if ! test -d $BINDIR ; then
    mkdir $BINDIR
fi
if ! test -d ${HOME}/.elisp ; then
    mkdir ${HOME}/.elisp
    touch ${HOME}/.elisp/mylocal.el
fi
if ! test -d ${HOME}/tmp ; then
    mkdir ${HOME}/tmp
fi
if ! test -d $VNCDIR ; then
    mkdir $VNCDIR
fi
touch $HOME/.Xdefaults_local

cd $HOME

rm -f ${HOME}/.bashrc
ln ${DOTDIR}/.bashrc ${HOME}

rm -f ${BINDIR}/clup
ln ${DOTDIR}/clup ${BINDIR}

rm -f ${HOME}/.emacs
ln ${DOTDIR}/.emacs ${HOME}

rm -f ${HOME}/.exrc
ln ${DOTDIR}/.exrc ${HOME}

rm -f ${HOME}/.mwmrc
ln ${DOTDIR}/.mwmrc ${HOME}

rm -f ${HOME}/.twmrc
ln ${DOTDIR}/.twmrc ${HOME}

rm -f ${HOME}/.Xdefaults
ln ${DOTDIR}/.Xdefaults ${HOME}

# removed because i never use it anymore
#rm -f ${HOME}/.xmodmap4win
#ln ${DOTDIR}/.xmodmap4win ${HOME}

rm -f ${HOME}/.inputrc
ln ${DOTDIR}/.inputrc ${HOME}

rm -f ${HOME}/.sawfishrc
ln ${DOTDIR}/.sawfishrc ${HOME}

rm -f ${HOME}/.gdbinit
ln ${DOTDIR}/.gdbinit ${HOME}

rm -f ${SVNDIR}/config
ln ${DOTDIR}/config ${SVNDIR}

rm -f ${VNCDIR}/xstartup
ln ${DOTDIR}/xstartup ${VNCDIR}

rm -f ${BINDIR}/sshconf
ln ${DOTDIR}/sshconf ${BINDIR}
