# -*- gitconfig -*-
[user]
	name = Mike Dalessio
	email = mike.dalessio@gmail.com

[github]
	user = flavorjones

[core]
	compression = 1
	loosecompression = 1
	abbrev = 8
	commitGraph = true
	attributesfile = /home/flavorjones/.gitattributes

# [feature]
# 	manyFiles = true

[pager]
	branch = false
	tag = false

[branch]
	autosetupmerge = true

[init]
	defaultBranch = main

[push]
	default = upstream
	# followtags = true # causes problems when pushing to other people's branches

[merge]
	conflictStyle = zdiff3

[diff]
	renames = copies
	compactionHeuristic = true
	wordRegex = "[^[:space:]_:.,()/`]+"
	# https://luppeng.wordpress.com/2020/10/10/when-to-use-each-of-the-git-diff-algorithms/
	algorithm = histogram

[log]
	abbrevCommit = true
	decorate = short
	date = iso8601

[tag]
	sort=version:refname

[rebase]
	autoStash = true
	updateRefs = true

[rerere]
	enabled = true

[alias]
	c = commit -v
	ci = commit
	co = checkout
	sw = switch

	d = diff -w -b
	ds = diff -w -b --staged
	dw = diff -w -b --word-diff
	dsw = diff -w -b --word-diff --staged
	lw = log -p --word-diff

	showw = show -w -b --word-diff

	pr = pull --rebase
	ru = remote update
	rup = remote update --prune

	ss = status --short
	w = log --name-status
	st = status

	lt = log --topo-order
	logp = log --pretty='format:"%h %C(yellow)%ci%Creset %Cgreen%an%Creset | %s"'
	logf = log --pretty=fuller --decorate
	logg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	logl = log --graph --decorate --oneline
	logla = log --graph --decorate --oneline --all

	bo = branch-overview

[color]
	ui = true

[color.status]
	added = green
	untracked = red
	changed = yellow

[color.diff]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color.diff-highlight]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[url "https://github.com/"]
	insteadOf = "gh:"

[url "git@github.com:"]
	pushInsteadOf = "gh:"
	pushInsteadOf = "https://github.com/"

[url "git@ssh.gitlab.gnome.org:"]
	pushInsteadOf = "https://gitlab.gnome.org"

[gc]
	writeCommitGraph = true
